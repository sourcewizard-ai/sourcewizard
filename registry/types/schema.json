{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "schema.json",
    "$defs": {
        "PackageConfig": {
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "$id": "PackageConfig.json",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "language": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "env": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "packages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "setup_prompt": {
                    "type": "string"
                },
                "relevant_files_pattern": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "uninstall": {
                    "type": "string"
                },
                "update": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "description",
                "language",
                "tags",
                "env",
                "packages"
            ]
        }
    }
}