{
  "name": "sourcewizard-monorepo",
  "version": "0.3.8",
  "private": true,
  "description": "SourceWizard - AI-powered setup wizard for dev tools and libraries with MCP integration",
  "type": "module",
  "workspaces": [
    "./apps/**",
    "./packages/**"
  ],
  "scripts": {
    "build": "tsc && node scripts/fix-imports.js",
    "start": "node dist/cli/index.js",
    "dev": "NODE_ENV=development tsx cli/index.ts",
    "mcp": "tsx mcp/server.ts",
    "test": "jest --no-watch",
    "test:coverage": "jest --coverage",
    "build-registry": "npx @typeconf/typeconf@latest build registry",
    "push-registry": "tsx scripts/insert-registry-configs.ts",
    "push-registry:staging": "tsx scripts/insert-registry-configs.ts --staging",
    "push-registry:dry-run": "tsx scripts/insert-registry-configs.ts --dry-run"
  },
  "keywords": [
    "sourcewizard",
    "package-manager",
    "ai",
    "agent",
    "cli",
    "terminal-ui",
    "code-snippets",
    "developer-tools"
  ],
  "author": "Ivan Chebykin <ivan@chebykin.org>",
  "license": "Apache-2.0",
  "homepage": "https://sourcewizard.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcewizard-ai/sourcewizard.git",
    "directory": "sourcewizard"
  },
  "bugs": {
    "url": "https://github.com/sourcewizard-ai/sourcewizard/issues"
  }
}
